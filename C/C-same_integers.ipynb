    "import numpy as np\n",
    "a,b,c = [int(i) for i in input().split()]\n",
    "dum =  np.array([a,b,c])\n",
    "a,b,c = np.sort(dum)\n",
    "\n",
    "diffsum = (c-a) + (c-b)\n",
    "\n",
    "if diffsum%2 == 0:\n",
    "    ans = diffsum/2\n",
    "else:\n",
    "    ans = 1 + (diffsum+1)/2\n",
    "    \n",
    "print(int(ans))"
