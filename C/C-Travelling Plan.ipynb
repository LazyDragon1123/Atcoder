   "source": [
    "n = int(input())\n",
    "a = [int(i) for i in input().split()]\n",
    "a = [0] + a + [0]\n",
    "\n",
    "base_ans = 0\n",
    "for i in range(1,n+2):\n",
    "    base_ans += abs(a[i]-a[i-1])\n",
    "    \n",
    "for i in range(n):\n",
    "    ans = base_ans - abs(a[i+1] - a[i]) - abs(a[i+2] - a[i+1]) + abs(a[i+2] - a[i])\n",
    "    print(int(ans))"
   ]
